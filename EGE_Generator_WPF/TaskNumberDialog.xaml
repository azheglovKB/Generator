<Window x:Class="EgeGenerator.TaskNumberDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод номера задания" 
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите номер задания (от 1 до 27)" 
                   FontSize="16"
                   Margin="0,0,0,15"/>

        <TextBox x:Name="txtTaskNumber" 
                 Grid.Row="1" 
                 FontSize="18"
                 Height="40"
                 TextAlignment="Center"
                 PreviewTextInput="TxtTaskNumber_PreviewTextInput"/>

        <TextBlock Grid.Row="2" 
                   Text="Задания с доп. материалами: 3,9,10,17,18,22,24,26 (1 доп.), 27 (2 доп.)" 
                   FontSize="12"
                   Foreground="#666666"
                   TextWrapping="Wrap"
                   Margin="0,20,0,0"/>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="ОК" 
                    Width="80" 
                    Height="35"
                    IsDefault="True"
                    Click="BtnOk_Click"/>
            <Button Content="Отмена" 
                    Width="80" 
                    Height="35"
                    Margin="10,0,0,0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>