<Window x:Class="EgeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генератор вариантов ЕГЭ" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Основные кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="btnGenerate" 
                    Content="СГЕНЕРИРОВАТЬ ВАРИАНТЫ" 
                    Height="60" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Background="#2196F3" 
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnGenerate_Click"
                    Margin="0,0,10,0"/>

            <Button x:Name="btnAddTask" 
                    Content="ДОБАВИТЬ ЗАДАНИЕ" 
                    Height="60" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Background="#4CAF50" 
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnAddTask_Click"/>
        </StackPanel>

        <!-- Статус -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="0,1,0,0"
                Margin="0,20,0,20"
                Padding="0,20,0,0">
            <TextBlock x:Name="txtStatus" 
                       Text="Нажмите кнопку для начала работы" 
                       TextWrapping="Wrap"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>