<Window x:Class="EgeGenerator.AddTasks1921Dialog"
        Icon="icon.jpg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление заданий 19-21" 
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock x:Name="txtZagolovok" 
                       Text="Добавление заданий 19-21" 
                       FontSize="18" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Информация -->
            <Border Background="#FFF3E0" 
                    BorderBrush="#FFB74D" 
                    BorderThickness="1" 
                    Padding="10" 
                    Margin="0,0,0,10">
                <TextBlock Text="Все три задания (19, 20, 21) должны быть заполнены вместе" 
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Задание 19 -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Задание 19:" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <!-- Задание 19 - файл -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Файл задания (png или jpg):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnZagruzitZadanie19" 
                                    Content="Загрузить задание 19" 
                                    Width="150" Height="30" 
                                    Click="BtnZagruzitZadanie19_Click"
                                    Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtStatusZadaniya19" 
                                       Text="Задание 19 не загружено" 
                                       VerticalAlignment="Center" 
                                       Foreground="#666666"
                                       Width="200"/>
                            <TextBlock x:Name="txtProverkaZadaniya19" 
                                       Text="✗" 
                                       Foreground="Red" 
                                       FontWeight="Bold" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Задание 19 - ответ -->
                    <StackPanel>
                        <TextBlock Text="Ответ для задания 19:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="btnZagruzitOtvet19" 
                                    Content="Загрузить ответ 19" 
                                    Width="150" Height="30" 
                                    Click="BtnZagruzitOtvet19_Click"
                                    Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtStatusOtvet19" 
                                       Text="Ответ 19 не загружен" 
                                       VerticalAlignment="Center" 
                                       Foreground="#666666"
                                       Width="200"/>
                            <TextBlock x:Name="txtProverkaOtvet19" 
                                       Text="✗" 
                                       Foreground="Red" 
                                       FontWeight="Bold" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Или введите ответ вручную:" Margin="0,5,0,5" FontSize="12"/>
                        <TextBox x:Name="txtOtvet19" 
                                 Height="60" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 TextChanged="TxtOtvet19_TextChanged"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Задание 20 -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Задание 20:" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <!-- Задание 20 - файл -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Файл задания (png или jpg):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnZagruzitZadanie20" 
                                    Content="Загрузить задание 20" 
                                    Width="150" Height="30" 
                                    Click="BtnZagruzitZadanie20_Click"
                                    Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtStatusZadaniya20" 
                                       Text="Задание 20 не загружено" 
                                       VerticalAlignment="Center" 
                                       Foreground="#666666"
                                       Width="200"/>
                            <TextBlock x:Name="txtProverkaZadaniya20" 
                                       Text="✗" 
                                       Foreground="Red" 
                                       FontWeight="Bold" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Задание 20 - ответ -->
                    <StackPanel>
                        <TextBlock Text="Ответ для задания 20:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="btnZagruzitOtvet20" 
                                    Content="Загрузить ответ 20" 
                                    Width="150" Height="30" 
                                    Click="BtnZagruzitOtvet20_Click"
                                    Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtStatusOtvet20" 
                                       Text="Ответ 20 не загружен" 
                                       VerticalAlignment="Center" 
                                       Foreground="#666666"
                                       Width="200"/>
                            <TextBlock x:Name="txtProverkaOtvet20" 
                                       Text="✗" 
                                       Foreground="Red" 
                                       FontWeight="Bold" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Или введите ответ вручную:" Margin="0,5,0,5" FontSize="12"/>
                        <TextBox x:Name="txtOtvet20" 
                                 Height="60" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 TextChanged="TxtOtvet20_TextChanged"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Задание 21 -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Задание 21:" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <!-- Задание 21 - файл -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Файл задания (png или jpg):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnZagruzitZadanie21" 
                                    Content="Загрузить задание 21" 
                                    Width="150" Height="30" 
                                    Click="BtnZagruzitZadanie21_Click"
                                    Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtStatusZadaniya21" 
                                       Text="Задание 21 не загружено" 
                                       VerticalAlignment="Center" 
                                       Foreground="#666666"
                                       Width="200"/>
                            <TextBlock x:Name="txtProverkaZadaniya21" 
                                       Text="✗" 
                                       Foreground="Red" 
                                       FontWeight="Bold" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Задание 21 - ответ -->
                    <StackPanel>
                        <TextBlock Text="Ответ для задания 21:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="btnZagruzitOtvet21" 
                                    Content="Загрузить ответ 21" 
                                    Width="150" Height="30" 
                                    Click="BtnZagruzitOtvet21_Click"
                                    Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtStatusOtvet21" 
                                       Text="Ответ 21 не загружен" 
                                       VerticalAlignment="Center" 
                                       Foreground="#666666"
                                       Width="200"/>
                            <TextBlock x:Name="txtProverkaOtvet21" 
                                       Text="✗" 
                                       Foreground="Red" 
                                       FontWeight="Bold" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Или введите ответ вручную:" Margin="0,5,0,5" FontSize="12"/>
                        <TextBox x:Name="txtOtvet21" 
                                 Height="60" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 TextChanged="TxtOtvet21_TextChanged"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Информация о варианте -->
            <Border Background="#E3F2FD" 
                    BorderBrush="#90CAF9" 
                    BorderThickness="1" 
                    Padding="10" 
                    Margin="0,0,0,10">
                <TextBlock x:Name="txtInformatsiyaOVariante" 
                           Text="Будет создан вариант № ?" 
                           FontWeight="SemiBold"/>
            </Border>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button Content="Сохранить все 3 задания" 
                        Width="180" 
                        Height="35"
                        Background="#4CAF50" 
                        Foreground="White"
                        FontWeight="Bold" 
                        IsDefault="True"
                        Click="BtnSohranit_Click"/>
                <Button Content="Отмена" 
                        Width="100" 
                        Height="35"
                        Background="#F44336" 
                        Foreground="White"
                        FontWeight="Bold" 
                        Margin="10,0,0,0"
                        IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>